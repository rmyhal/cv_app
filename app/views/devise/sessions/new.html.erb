<div class="form-box">
<div class="head">Welcome back</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => 'login-form'}) do |f| %>

      <div class="my-form-group">
        <label class="my-label-control">
          <span class="my-label-text">Email</span>
        </label>
        <%= f.email_field :email, autofocus: true ,class: 'my-form-control' %>
      </div>

      <div class="my-form-group">
        <label for="" class="my-label-control">
          <span class="my-label-text">Password</span>
        </label>
        <%= f.password_field :password, autocomplete: 'off', class: 'my-form-control' %>
      </div>

        <%= f.submit 'Login', class: 'login-btn'%>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <span>Forgot your</span>
              <%= link_to 'password?', new_password_path(resource_name) %><br/>
          <% end -%>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <span>Not registered?</span>
              <%= link_to 'Sign up', new_registration_path(resource_name) %><br />
          <% end -%>
  <% end %>
</div>


